<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="kernel.listener.drupal_exception_listener" class="Ekino\Bundle\DrupalBundle\EventListener\DrupalListener">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <argument type="service" id="drupal" />
            <argument>%ekino_drupal_delivery_strategy%</argument>
        </service>

        <service id="kernel.listener.drupal_request_listener" class="Ekino\Bundle\DrupalBundle\EventListener\DrupalListener">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="255" />
            <argument type="service" id="drupal" />
            <argument>%ekino_drupal_delivery_strategy%</argument>
        </service>
    </services>
</container>